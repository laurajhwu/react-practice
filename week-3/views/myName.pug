extends ./layout/main

block body
    if name
        h1 #{name}
    else
        form(action="/trackName", method="post")
            label Please enter your name: 
                input(type="text", name="name")
            button(type="submit") Enter
    br
    form(action="/clearName", method="post") 
        button(type="submit") Enter New Name
    br
    a(href="/") Return to Home
